@inherits LayoutComponentBase

<PageTitle>FluentUIBlazorApp</PageTitle>

<FluentLayout>

    <FluentHeader>
        <a href="/" style="color: white;">Home</a>
        &nbsp;&nbsp;&nbsp;
        <a href="/sub-page" style="color: white;">Sub Page</a>
        <FluentSpacer />
        About
    </FluentHeader>

    <FluentStack Orientation="Orientation.Horizontal" Width="100%">

        <FluentNavMenu Width="150">
            @foreach (var item in menu)
            {
                <FluentNavMenuLink Icon="@item.Icon" Text="@item.Text" Href="@item.Href" />
            }
        </FluentNavMenu>

        <FluentBodyContent>
            @Body
            <FluentFooter Style="@("height: 40px; color: white; text-align: center;")">
                Footer Text
            </FluentFooter>
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>

@code {
    public static List<MenuItem> menu = new List<MenuItem>(); 
}

