@inherits LayoutComponentBase

<PageTitle>FluentUIBlazorApp</PageTitle>

<FluentLayout>

    <FluentHeader>
        Some Header Text
        <FluentSpacer />
        About
    </FluentHeader>

    <FluentStack Orientation="Orientation.Horizontal" Width="100%">

        <FluentNavMenu Width="150">
            @foreach (var item in this.menu)
            {
                <FluentNavMenuLink Icon="@item.Icon" Text="@item.Text" Href="@item.Href" />
            }
        </FluentNavMenu>

        <FluentBodyContent>
            @Body
        </FluentBodyContent>
    </FluentStack>

    <FluentFooter Style="@("height: 40px; color: white; text-align: center;")">
        Footer Text
    </FluentFooter>
</FluentLayout>

@code {
    private List<MenuItem> menu = new List<MenuItem>();

    protected override void OnInitialized()
    {
        MenuProvider.Subscribe(x => this.menu = x);
    }
}
